{
  "name": "passlock",
  "version": "1.1.0",
  "description": "A secure password generator and manager",
  "main": "src/app/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.polskapeeps.passlock",
    "productName": "PassLock",
    "files": [
      "src/**/*",
      "assets/**/*",
      "build/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icons/favicon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polskapeeps/PassLock.git"
  },
  "keywords": [
    "password",
    "generator",
    "security",
    "electron"
  ],
  "author": "polskapeeps",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polskapeeps/PassLock/issues"
  },
  "homepage": "https://github.com/polskapeeps/PassLock#readme",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "secure-random-password": "^0.2.3"
  }
}
